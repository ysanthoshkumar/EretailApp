<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EretailApp.ProductDetails">
  <ContentPage.Resources>

    <ResourceDictionary x:Name="AppDictionary">
      <Color x:Key="BackgroundColor">#FFFFFF</Color>
      <Color x:Key="BorderColor">#F6F6F6</Color>
      <Style x:Key="InternalViewStyle" TargetType="ContentView">
        <Setter Property="BackgroundColor"
            Value="{StaticResource BackgroundColor}"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="Padding" Value="1,1,1,1"></Setter>
      </Style>
      <Style x:Key="BorderStyle" TargetType="ContentView">
        <Setter Property="BackgroundColor" Value="{StaticResource BorderColor}"/>
        <Setter Property="Padding" Value="1,1,1,1"></Setter>
      </Style>
      <Style x:Key="plainEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="#eee"/>
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontSize" Value="16" />
      </Style>
    </ResourceDictionary>
  </ContentPage.Resources>


  <StackLayout  Orientation="Vertical"  VerticalOptions="FillAndExpand"  BackgroundColor="#FFFFFF" HorizontalOptions="FillAndExpand"   Padding="2"  Margin="2"  >

   <StackLayout >
      <Grid  BackgroundColor="#FE7C08" Padding="5">
        <Grid.ColumnDefinitions >
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Image
               HeightRequest="30"
                     Margin="20,0,20,0"
               WidthRequest="30"
                    Source="leftcir.png"
              VerticalOptions="Center"
                 
              HorizontalOptions="Start"   Grid.Row="0" Grid.Column="0">
          <Image.GestureRecognizers>
            <TapGestureRecognizer
                        Tapped="back"
                         />
          </Image.GestureRecognizers>


        </Image>
        <Label  Text="Products" VerticalTextAlignment="Center"     Grid.Row="0" Grid.Column="1"   HorizontalOptions="Start"    FontSize="20"  FontFamily="Bold" TextColor="White"></Label>
        <Button  x:Name="btnImport"   Text="Import"   TextColor="White" BackgroundColor="#446a81" Grid.Row="0" Grid.Column="2"  Clicked="AddProductTwo"></Button>
        <Button x:Name="btnAddProduct" Text="ADDProduct"   TextColor="White" BackgroundColor="#41af4b" Grid.Row="0" Grid.Column="3"  Clicked="AddProduct"></Button>
      </Grid>
    </StackLayout>






    <!-- 
<StackLayout   Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="#EBEBEB">

  <Label x:Name="EditableProduct" Text="Add,View and Edit your  Product all in one place.Need Help?" VerticalTextAlignment="Center"
         FontFamily="Bold" TextColor="#000000" HorizontalOptions="Center" ></Label>
  <Button  x:Name="btnImport"   Text="Import"  HorizontalOptions="End"  TextColor="White" BackgroundColor="#446a81" ></Button>
 <Button x:Name="btnAddProduct" Text="ADDProduct"   HorizontalOptions="End"  TextColor="White" BackgroundColor="#41af4b"  Clicked="AddProduct"></Button>
</StackLayout>
-->

    <StackLayout Orientation="Horizontal">

      <StackLayout HorizontalOptions="FillAndExpand" >

        <SearchBar x:Name="searchvalue" Placeholder="Search here"   WidthRequest="150" HorizontalOptions="FillAndExpand" PlaceholderColor="#C8C8C8"  TextColor="Gray"   CancelButtonColor="Gray" SearchButtonPressed="btnclick"></SearchBar>

      </StackLayout>


      <StackLayout HorizontalOptions="FillAndExpand" >
        <Picker x:Name="Mainpicker"  TextColor="#000000"  Title="Choose category"
                HorizontalOptions="FillAndExpand"   BackgroundColor="White"  SelectedIndexChanged="onselecteditem"  />
      </StackLayout>

      <StackLayout HorizontalOptions="FillAndExpand" >
        <Picker x:Name="Deptpicker"  TextColor="#000000"   BackgroundColor="White" Title="Choose Department" HorizontalOptions="FillAndExpand"  SelectedIndexChanged="Deptonselecteditem"  />
      </StackLayout>
    </StackLayout>
    <StackLayout HorizontalOptions="FillAndExpand" >
      <ListView x:Name="mylistvi"
             HasUnevenRows="True" >
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>

              <StackLayout Orientation="Horizontal" BackgroundColor="White">
                <Label Text="{Binding name}"  WidthRequest="100" TextColor="Black" HorizontalTextAlignment="Center"  VerticalTextAlignment="Center"  HorizontalOptions="Start"  FontSize="16" ></Label>
                <Image Source="{Binding Icon}" HeightRequest="50" WidthRequest="50"  HorizontalOptions="Start">
                </Image>
                <Label Text="{Binding category}"  WidthRequest="100"  TextColor="Black" HorizontalTextAlignment="Center"  VerticalTextAlignment="Center" HorizontalOptions="FillAndExpand"  FontSize="16" ></Label>
                <Label Text="{Binding Dept}"  WidthRequest="100"  TextColor="Black" HorizontalTextAlignment="Center"  VerticalTextAlignment="Center"  HorizontalOptions="End" FontSize="16" ></Label>
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </StackLayout>
</ContentPage>